{
  "expo": {
    "name": "Waifu Walls",
    "slug": "waifu-walls",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#121212"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#121212"
      },
      "package": "com.waifuwalls.app",
      "versionCode": 1,
      "permissions": [
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Waifu Walls to access your photos to save wallpapers.",
          "savePhotosPermission": "Allow Waifu Walls to save wallpapers to your photos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-router"
    ],
    "newArchEnabled": true,
    "experiments": {
      "typedRoutes": true
    }
  }
}